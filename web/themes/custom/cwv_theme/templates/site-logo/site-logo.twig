{#
/**
* @file
* Site logo template: Responsive site logo with url
*
* When called with logo_url variable true it will
* wrap the site logo with link back to <front>.

* If logo_type is responsive use both full and simple logos,
* else if type is simple use it, else use logo full.
*
#}
{%  if logo_url %}
  <a href="{{ path('<front>') }}" class="site-logo crt-inline-block">
{% endif %}

<span class="crt-sr-only">{{ 'Mindsing'|t }}</span>

{# If logo_type is responsive, use both logos with classes. #}
{% if logo_type == 'responsive' %}

  {# Set full logo classes for desktop. #}
  <span class="site-logo-span crt-hidden lg:crt-block crt-align-baseline crt-w-[12rem]">
    {% include '@cwv_theme/templates/img/logo.svg' %}
  </span>

  {# Set simple logo classes for mobile. #}
  <span class="site-logo-span crt-flex lg:crt-hidden crt-align-baseline crt-w-16">
    {% include '@cwv_theme/templates/img/logo-mobile.svg' %}
  </span>

{# Else If logo_type is simple print simple logo and classes #}
{% elseif logo_type == 'simple' %}
  <span class="site-logo-span crt-flex crt-align-baseline crt-w-16">
    {% include '@cwv_theme/templates/img/logo-mobile.svg' %}
  </span>

{# Else print full logo and classes. #}
{% else %}
  <span class="site-logo-span crt-block crt-align-baseline crt-w-[12rem]">
    {% include '@cwv_theme/templates/img/logo.svg' %}
  </span>
{% endif %}

{% if logo_url %}
  </a>
{% endif %}
